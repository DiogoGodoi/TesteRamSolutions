<!doctype html>
<html lang="PT-BR">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <title>Correios</title>
  </head>
  <body>
    <div class="container col-12" style="margin-top: 200px;">
     <div class="container col-8">
      <h1>Buscar Cep</h1>
       <form action="Cep" method="POST">
         <div class="col-12">
          <div class="input-group mb-3">
           <input type="text" class="form-control" placeholder="Digite o Cep" name="CEP" <%= typeof Valor !== 'undefined'%>>
          </div>
            <button type="submit" class="btn btn-primary" name="op" value="busc">Buscar</button>
       </form>
          <br><br>
           <h1>
            <%= mensagem %>
           </h1>
            <div class="alert alert-secondary" role="alert">
              <h4><%= result.logradouro %></h4>
              <h4><%= result.bairro %></h4>
              <h4><%= result.localidade %></h4>
              <h4><%= result.uf %></h4>     
            </div>
     </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
  </body>
</html>